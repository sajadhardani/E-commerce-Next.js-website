generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}

enum ProductCategory {
  MOBILE
  LAPTOP
  WATCH
  OTHERS
}

model Product {
  id          String @id @default(uuid())
  name        String
  category    ProductCategory
  description String?
  price       Float? @default(0.0)
  quantity    Int?   @default(0)
  Image     Image[]
}


